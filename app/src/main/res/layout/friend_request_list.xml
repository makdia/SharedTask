<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/circle"
	android:layout_margin="0dp">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:orientation="horizontal"
		android:paddingTop="5dp"
		android:weightSum="1"
		android:background="@color/colorWhite">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:layout_gravity="center"
			android:layout_weight="0.80"
			android:padding="0dp"
			android:background="@color/colorWhite">
			<de.hdodenhof.circleimageview.CircleImageView
				android:id="@+id/friend_img"
				android:layout_width="55dp"
				android:layout_height="55dp"
				android:src="@drawable/friend_img2"
				android:padding="0dp"
				android:layout_gravity="center"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_weight="0.20"
			android:background="@color/colorWhite"
			android:gravity="center"
			android:orientation="vertical"
			android:weightSum="1">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_weight="0.40"
				android:background="@color/colorWhite"
				android:gravity="center"
				android:orientation="vertical"
				android:padding="5dp"
				android:weightSum="1">
				<TextView
					android:id="@+id/friend_name"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="left"
					android:layout_weight="0.40"
					android:fontFamily="sans-serif"
					android:gravity="left"
					android:padding="2dp"
					android:text="Makdia Hussain"
					android:textColor="@color/colorLightBlack"
					android:textSize="14sp"
					android:textStyle="bold" />
				<TextView
					android:id="@+id/friend_id"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="left"
					android:layout_marginRight="5dp"
					android:layout_weight="0.60"
					android:fontFamily="sans-serif"
					android:gravity="left"
					android:padding="2dp"
					android:text="00001"
					android:textColor="@color/colorLightBlack"
					android:textSize="12sp"
					android:textStyle="normal" />
			</LinearLayout>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_weight="0.40"
				android:background="@color/colorWhite"
				android:gravity="left"
				android:orientation="horizontal"
				android:paddingBottom="5dp"
				android:paddingLeft="5dp"
				android:paddingRight="5dp"
				android:weightSum="1">
				<RelativeLayout
					android:id="@+id/lay_accept_friend"
					android:layout_width="80dp"
					android:layout_height="35dp"
					android:layout_gravity="left|center"
					android:layout_marginRight="10dp"
					android:background="@drawable/invite_friend_button_background"
					android:gravity="center"
					android:padding="5dp"
					android:orientation="horizontal"
					android:weightSum="1">
					<!-- INPUT -->
					<TextView
						android:id="@+id/accept_friend_txtView"
						android:layout_toRightOf="@+id/accept_friend_icon"
						android:layout_width="50dp"
						android:layout_height="30dp"
						android:layout_gravity="center"
						android:gravity="center"
						android:text="Accept"
						android:textColor="@color/colorAccent"
						android:textSize="10sp"
						android:textStyle="bold"
						/>
					<!-- ICON -->
					<ImageView
						android:id="@+id/accept_friend_icon"
						android:src="@drawable/accept_friend2"
						android:layout_width="30dp"
						android:layout_height="30dp" />
				</RelativeLayout>
				<RelativeLayout
					android:id="@+id/lay_reject_friend"
					android:layout_width="80dp"
					android:layout_height="35dp"
					android:layout_gravity="left|center"
					android:layout_marginRight="5dp"
					android:background="@drawable/invite_friend_button_background"
					android:gravity="center"
					android:padding="5dp"
					android:orientation="horizontal"
					android:weightSum="1">
					<!-- INPUT -->
					<TextView
						android:id="@+id/reject_friend_txtView"
						android:layout_toRightOf="@+id/reject_friend_icon"
						android:layout_width="50dp"
						android:layout_height="30dp"
						android:layout_gravity="center"
						android:gravity="center"
						android:text="Reject"
						android:textColor="@color/colorAccent"
						android:textSize="10sp"
						android:textStyle="bold"/>
					<!-- ICON -->
					<ImageView
						android:id="@+id/reject_friend_icon"
						android:src="@drawable/reject_friend2"
						android:layout_width="30dp"
						android:layout_height="30dp" />
				</RelativeLayout>
			</LinearLayout>
			<View
				android:layout_width="match_parent"
				android:layout_height="0.10dp"
				android:layout_marginTop="5dp"
				android:background="@color/colorAccent" />
		</LinearLayout>
	</LinearLayout>
</android.support.v7.widget.CardView>