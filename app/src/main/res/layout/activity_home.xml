<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.example.computergallery.alarm.HomeActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorWhite">
            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textStyle="bold"
                android:typeface="serif"
                android:textColor="@color/colorAccent"
                android:text="Shared Task Shared Task Shared Task Shared Task Shared Task Shared Task"
                android:textSize="20sp"
                android:layout_weight=".01"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                android:orientation="vertical"
                android:background="#FDFFFE"
                android:layout_margin="10dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@color/colorWhite">
                    <LinearLayout
                        android:id="@+id/layout1"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        android:weightSum="1"
                        android:gravity="center"
                        android:background="@drawable/card_background"
                        android:layout_margin="2dp">
                        <android.support.v7.widget.CardView
                            android:id="@+id/card_1"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="0dp"
                            app:cardUseCompatPadding="true"
                            android:orientation="vertical"
                            android:layout_weight="0.50">
                            <LinearLayout
                                android:id="@+id/layout_my_task"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:orientation="horizontal"
                                android:clickable="true"
                                android:onClick="myTask"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:weightSum="1">
                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:padding="15dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/my_task4"
                                    android:layout_weight="0.10"
                                    android:clickable="true"
                                    android:onClick="myTask"/>
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="80dp"
                                    android:background="#ECEBF0"
                                    android:layout_gravity="center_vertical"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/colorWhite"
                                    android:orientation="vertical"
                                    android:layout_gravity="left|center"
                                    android:gravity="left|center"
                                    android:layout_weight="0.80"
                                    android:weightSum="1"
                                    android:padding="5dp"
                                    android:clickable="true"
                                    android:onClick="myTask">
                                    <TextView
                                        android:id="@+id/my_task"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:textColor="#5E6469"
                                        android:gravity="left|top"
                                        android:padding="5dp"
                                        android:clickable="true"
                                        android:onClick="myTask"
                                        android:text="My Task"
                                        android:layout_weight="0.50"
                                        android:maxLines="1" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textStyle="normal"
                                        android:textColor="#C0C3CC"
                                        android:padding="2dp"
                                        android:clickable="true"
                                        android:onClick="myTask"
                                        android:text="Add your own task"
                                        android:layout_weight="0.50"
                                        android:maxLines="2"
                                        android:gravity="left|top" />
                                </LinearLayout>
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:padding="5dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/right_arrow"
                                    android:layout_weight="0.10"/>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/layout2"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        android:weightSum="1"
                        android:gravity="center"
                        android:background="@drawable/card_background"
                        android:layout_margin="2dp">
                        <android.support.v7.widget.CardView
                            android:id="@+id/card_2"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="0dp"
                            app:cardUseCompatPadding="true"
                            android:orientation="vertical"
                            android:layout_weight="0.50">
                            <LinearLayout
                                android:id="@+id/layout_my_shared_task"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:weightSum="1"
                                android:orientation="horizontal"
                                android:clickable="true"
                                android:onClick="mySharedTask"
                                android:layout_gravity="center"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:padding="15dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/shared_task4"
                                    android:layout_weight="0.10"/>
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="80dp"
                                    android:background="#ECEBF0"
                                    android:layout_gravity="center_vertical"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/colorWhite"
                                    android:orientation="vertical"
                                    android:layout_gravity="left|center"
                                    android:gravity="left|center"
                                    android:layout_weight="0.80"
                                    android:weightSum="1"
                                    android:padding="5dp"
                                    android:clickable="true"
                                    android:onClick="mySharedTask">
                                    <TextView
                                        android:id="@+id/shared_task"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:textColor="#5E6469"
                                        android:gravity="left|top"
                                        android:padding="5dp"
                                        android:clickable="true"
                                        android:onClick="mySharedTask"
                                        android:text="My Shared Task"
                                        android:layout_weight="0.50"
                                        android:maxLines="1"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textStyle="normal"
                                        android:textColor="#C0C3CC"
                                        android:gravity="left|top"
                                        android:padding="2dp"
                                        android:clickable="true"
                                        android:onClick="mySharedTask"
                                        android:text="Show your shared task"
                                        android:layout_weight="0.50"
                                        android:maxLines="2"/>
                                </LinearLayout>
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:padding="5dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/right_arrow"
                                    android:layout_weight="0.10"
                                    android:clickable="true"
                                    android:onClick="mySharedTask"/>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/layout3"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        android:weightSum="1"
                        android:gravity="center"
                        android:background="@drawable/card_background"
                        android:layout_margin="2dp">
                        <android.support.v7.widget.CardView
                            android:id="@+id/card_3"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="0dp"
                            app:cardUseCompatPadding="true"
                            android:orientation="vertical"
                            android:layout_weight="0.50">
                            <LinearLayout
                                android:id="@+id/layout_friends"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:orientation="horizontal"
                                android:clickable="true"
                                android:onClick="friends"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:weightSum="1">
                                <RelativeLayout
                                    android:layout_width="80dp"
                                    android:layout_height="120dp"
                                    android:padding="10dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_weight="0.10"
                                    android:clickable="true"
                                    android:onClick="friends">
                                    <ImageView
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:padding="5dp"
                                        android:layout_gravity="bottom"
                                        android:src="@drawable/friends4"/>
                                    <Button
                                        android:id="@+id/total_friend_invitations"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:textSize="12sp"
                                        android:layout_marginTop="40dp"
                                        android:layout_marginLeft="30dp"
                                        android:text="100"
                                        android:textAlignment="center"
                                        android:gravity="center"
                                        android:textColor="@color/colorWhite"
                                        android:textStyle="normal"
                                        android:padding="2dp"
                                        android:maxLines="1"
                                        android:background="@drawable/red_mark_notification"
                                        android:visibility="visible"/>
                                </RelativeLayout>
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="80dp"
                                    android:background="#ECEBF0"
                                    android:layout_gravity="center_vertical"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/colorWhite"
                                    android:orientation="vertical"
                                    android:layout_gravity="left|center"
                                    android:gravity="left|center"
                                    android:layout_weight="0.80"
                                    android:weightSum="1"
                                    android:padding="5dp"
                                    android:clickable="true"
                                    android:onClick="friends">
                                    <TextView
                                        android:id="@+id/total_friends"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:textColor="#5E6469"
                                        android:gravity="left|top"
                                        android:padding="5dp"
                                        android:clickable="true"
                                        android:onClick="friends"
                                        android:text="Friends"
                                        android:layout_weight="0.50"
                                        android:maxLines="1"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textStyle="normal"
                                        android:textColor="#C0C3CC"
                                        android:gravity="left|top"
                                        android:padding="2dp"
                                        android:clickable="true"
                                        android:onClick="friends"
                                        android:text="Give task to your friends"
                                        android:layout_weight="0.50"
                                        android:maxLines="2"/>
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:padding="5dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/right_arrow"
                                    android:layout_weight="0.10"
                                    android:clickable="true"
                                    android:onClick="friends"/>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>




                    <LinearLayout
                        android:id="@+id/layout4"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        android:weightSum="1"
                        android:gravity="center"
                        android:background="@drawable/card_background"
                        android:layout_margin="2dp">
                        <android.support.v7.widget.CardView
                            android:id="@+id/card_4"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="0dp"
                            app:cardUseCompatPadding="true"
                            android:orientation="vertical"
                            android:layout_weight="0.50">
                            <LinearLayout
                                android:id="@+id/layout_invite_friends"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:weightSum="1"
                                android:orientation="horizontal"
                                android:clickable="true"
                                android:onClick="inviteFriends"
                                android:layout_gravity="center"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:padding="15dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/invite_friends4"
                                    android:layout_weight="0.10"/>
                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="80dp"
                                    android:background="#ECEBF0"
                                    android:layout_gravity="center_vertical"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/colorWhite"
                                    android:orientation="vertical"
                                    android:layout_gravity="left|center"
                                    android:gravity="left|center"
                                    android:layout_weight="0.80"
                                    android:weightSum="1"
                                    android:padding="5dp"
                                    android:clickable="true"
                                    android:onClick="inviteFriends">
                                    <TextView
                                        android:id="@+id/invite_friends"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:textColor="#5E6469"
                                        android:gravity="left|top"
                                        android:padding="5dp"
                                        android:clickable="true"
                                        android:onClick="inviteFriends"
                                        android:text="Invite Friends"
                                        android:layout_weight="0.50"
                                        android:maxLines="1"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:textStyle="normal"
                                        android:textColor="#C0C3CC"
                                        android:gravity="left|top"
                                        android:padding="2dp"
                                        android:clickable="true"
                                        android:onClick="inviteFriends"
                                        android:text="Invite friends for giving task"
                                        android:layout_weight="0.50"
                                        android:maxLines="2"/>
                                </LinearLayout>
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:padding="5dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/right_arrow"
                                    android:layout_weight="0.10"
                                    android:clickable="true"
                                    android:onClick="inviteFriends"/>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>