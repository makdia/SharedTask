<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="#FEFEFE"
    android:scrollbarAlwaysDrawVerticalTrack="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="20dp">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/registration_logo"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_margin="5dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:background="@drawable/user_id4" />
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:gravity="left|center"
                            android:letterSpacing="0.1"
                            android:maxLines="1"
                            android:text="User ID"
                            android:textColor="@color/colorAccent"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:padding="10dp"/>
                        <TextView
                            android:id="@+id/user_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="left|center"
                            android:letterSpacing="0.1"
                            android:maxLines="1"
                            android:textColor="#3a3a3a"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:background="@drawable/user_key3" />
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:gravity="left|center"
                            android:letterSpacing="0.1"
                            android:maxLines="1"
                            android:text="User Key"
                            android:textColor="@color/colorAccent"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:padding="10dp" />
                        <TextView
                            android:id="@+id/key"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="left|center"
                            android:letterSpacing="0.1"
                            android:maxLines="1"
                            android:textColor="#3a3a3a"
                            android:textSize="12sp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="#fff"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:background="@drawable/user_name3" />
                    <EditText
                        android:id="@+id/user_name"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/shadow2"
                        android:gravity="left"
                        android:hint="User Name"
                        android:inputType="text"
                        android:letterSpacing="0.1"
                        android:maxLines="1"
                        android:textColor="#3a3a3a"
                        android:textColorHint="@color/colorDarkGray2"
                        android:textCursorDrawable="@null"
                        android:textSize="12sp"
                        android:padding="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="#fff"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:background="@drawable/password2" />
                    <EditText
                        android:id="@+id/user_password"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/shadow2"
                        android:gravity="left"
                        android:hint="User Password"
                        android:inputType="textPassword"
                        android:letterSpacing="0.1"
                        android:maxLines="1"
                        android:textColor="#3a3a3a"
                        android:textColorHint="@color/colorDarkGray2"
                        android:textCursorDrawable="@null"
                        android:textSize="12sp"
                        android:padding="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/confirm"
                android:layout_width="260dp"
                android:layout_height="75dp"
                android:fontFamily="sans-serif"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:background="@drawable/btn_create_account"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:text="Create Account"
                android:gravity="center"
                android:clickable="true"
                android:onClick="createAccount"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="10dp"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>