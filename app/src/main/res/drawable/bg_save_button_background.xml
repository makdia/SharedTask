<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true" >
    <shape>
        <solid
            android:color="@color/colorAccent" />
        <stroke
            android:width="1dp"
            android:color="#22D1B4" />
        <corners
            android:radius="1dp" />
        <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
    </shape>
</item>
<item>
    <shape>
        <gradient
            android:startColor="@color/colorAccent"
            android:endColor="#22D1B4"
            android:angle="360" />
        <stroke
            android:width="1dp"
            android:color="@color/colorAccent" />
        <corners
            android:radius="5dp" />
        <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
    </shape>
</item>
</selector>
