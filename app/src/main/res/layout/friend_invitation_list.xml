<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginBottom="1dp"
	android:background="@drawable/circle"
	android:layout_marginLeft="0dp"
	android:layout_marginRight="0dp">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:orientation="horizontal"
		android:padding="3dp"
		android:weightSum="1"
		android:background="@color/colorWhite">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:layout_gravity="center"
			android:layout_weight="0.80"
			android:padding="5dp"
			android:background="@color/colorWhite">
			<ImageView
				android:id="@+id/friend_img"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:src="@drawable/friend_img2"
				android:background="@color/colorWhite"
				android:scaleType="fitXY" />
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_weight="0.20"
			android:background="#fff"
			android:gravity="center"
			android:orientation="horizontal"
			android:weightSum="1"
			android:padding="5dp">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_weight="0.50"
				android:background="#fff"
				android:gravity="center"
				android:orientation="vertical"
				android:weightSum="1">
				<TextView
					android:id="@+id/friend_name"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="left"
					android:gravity="left"
					android:text="Makdia Hussain"
					android:textColor="@color/colorLightBlack"
					android:textSize="14sp"
					android:textStyle="bold"
					android:fontFamily="sans-serif"
					android:padding="2dp"
					android:layout_weight="0.40" />
				<TextView
					android:id="@+id/friend_id"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="left"
					android:gravity="left"
					android:text="00001"
					android:textColor="@color/colorLightBlack"
					android:textSize="12sp"
					android:textStyle="normal"
					android:fontFamily="sans-serif"
					android:padding="2dp"
					android:layout_weight="0.60"
					android:layout_marginRight="5dp"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/lay_invite_friend"
				android:layout_width="100dp"
				android:layout_height="30dp"
				android:layout_gravity="right|center"
				android:gravity="right"
				android:orientation="horizontal"
				android:weightSum="1"
				android:layout_weight="0.50"
				android:padding="3dp"
				android:background="@drawable/invite_friend_button_background">
				<ImageView
					android:layout_width="25dp"
					android:layout_height="25dp"
					android:src="@drawable/invite_friend_profile2"
					android:scaleType="fitCenter"
					android:layout_weight="0.50"
					android:layout_gravity="left" />
				<ImageView
					android:id="@+id/img_invitation_confirmation"
					android:layout_width="25dp"
					android:layout_height="25dp"
					android:src="@drawable/invite_friend_plus"
					android:scaleType="fitCenter"
					android:layout_weight="0.50"
					android:layout_gravity="right"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</android.support.v7.widget.CardView>


