<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/circle"
	android:layout_margin="0dp">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:orientation="horizontal"
		android:paddingTop="5dp"
		android:weightSum="1"
		android:background="@color/colorWhite">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:layout_gravity="center"
			android:layout_weight="0.80"
			android:padding="10dp"
			android:background="@color/colorWhite">
			<de.hdodenhof.circleimageview.CircleImageView
				android:id="@+id/friend_img"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:src="@drawable/friend_img2"
				android:padding="0dp"
				android:layout_gravity="center"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_weight="0.20"
			android:background="@color/colorWhite"
			android:gravity="center"
			android:orientation="vertical"
			android:weightSum="1">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_weight="0.20"
				android:background="@color/colorWhite"
				android:gravity="center"
				android:orientation="horizontal"
				android:weightSum="1"
				android:padding="10dp">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_weight="0.90"
					android:background="@color/colorWhite"
					android:gravity="center"
					android:orientation="vertical"
					android:weightSum="1">
					<TextView
						android:id="@+id/friend_name"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="left"
						android:gravity="left"
						android:text="Makdia Hussain"
						android:textColor="@color/colorLightBlack"
						android:textSize="14sp"
						android:textStyle="bold"
						android:fontFamily="sans-serif"
						android:padding="2dp"
						android:layout_weight="0.40" />
					<TextView
						android:id="@+id/friend_id"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="left"
						android:gravity="left"
						android:text="00001"
						android:textColor="@color/colorLightBlack"
						android:textSize="12sp"
						android:textStyle="normal"
						android:fontFamily="sans-serif"
						android:padding="2dp"
						android:layout_weight="0.60"
						android:layout_marginRight="5dp"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/lay_invite_friend"
					android:layout_width="120dp"
					android:layout_height="45dp"
					android:layout_gravity="right|center"
					android:gravity="center"
					android:orientation="vertical"
					android:layout_weight="0.10"
					android:background="@color/colorWhite"
					android:elevation="0dp">
					<Button
						android:id="@+id/btn_add_task"
						android:layout_width="85dp"
						android:layout_height="35dp"
						android:text="View Task"
						android:textSize="10sp"
						android:textStyle="bold"
						android:layout_gravity="center"
						android:background="@drawable/friend_view_task_button_background"
						android:gravity="center"
						android:textColor="@color/colorAccent"
						android:padding="5dp"
						android:layout_margin="0dp"
						android:elevation="0dp"/>
				</LinearLayout>
			</LinearLayout>
			<View
				android:layout_width="match_parent"
				android:layout_height="0.50dp"
				android:background="@color/colorAccent"
				android:layout_marginTop="5dp"/>
		</LinearLayout>
	</LinearLayout>
</android.support.v7.widget.CardView>
